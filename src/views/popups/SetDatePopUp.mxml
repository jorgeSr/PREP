<?xml version="1.0" encoding="utf-8"?>
<s:SkinnablePopUpContainer xmlns:fx="http://ns.adobe.com/mxml/2009"
						   xmlns:s="library://ns.adobe.com/flex/spark"
						   creationComplete="initPopUp(event)">
	
	<s:TitleWindow width="451" height="403" close="close()" horizontalCenter="0" title="Confirmar Fecha"
				   verticalCenter="0">

				<s:Button x="11" y="285" width="170" label="OK" click="dispatchEvent(new Event('ok'))"
						  fontSize="30"/>
				<s:Button x="271" y="289" width="170" label="Cancelar"
						  click="dispatchEvent(new Event('no'))" fontSize="30"/>
						
			<s:Label x="1" y="90" width="100%" height="104" backgroundAlpha="0.5"
					 backgroundColor="#D7AB9F" text="&#xd;"/>
			<s:Label id="lbDay" x="13" y="138" width="126" height="48" backgroundAlpha="1"
					 backgroundColor="#F9F8F5" fontSize="40" textAlign="center"
					 verticalAlign="middle"/>
			<s:Label id="lbMonth" x="163" y="138" width="126" height="48" backgroundAlpha="1"
					 backgroundColor="#F9F8F5" text="&#xd;" textAlign="center"
					 verticalAlign="middle"/>
			<s:Label id="lbYear" x="314" y="138" width="126" height="48" backgroundAlpha="1"
					 backgroundColor="#F9F8F5" textAlign="center" verticalAlign="middle"/>
			<s:Label x="45" y="100" text="Dia"/>
			<s:Label x="187" y="100" text="Mes"/>
			<s:Label x="337" y="100" text="AÃ±o"/>
		
			<s:Button id="plusDay" x="28" y="19" width="100" label="+" fontSize="30"
					  click="setDate(lbDay, 1, 31)"/>
			<s:Button id="minusDay" x="28" y="200" width="100" label="-" fontSize="30"
					  click="setDate(lbDay, -1, 31)"/>
			<s:Button id="plusMonth" x="179" y="19" width="100" label="+" fontSize="30"
					  click="setDate(lbMonth, 1, 12)"/>
			<s:Button id="minusMonth" x="179" y="200" width="100" label="-" fontSize="30"
					  click="setDate(lbMonth, -1, 12)"/>
			<s:Button id="plusYear" x="327" y="19" width="100" label="+" fontSize="30"
					  click="setDate(lbYear, 1, 9999)"/>
			<s:Button id="minusYear" x="327" y="200" width="100" label="-" fontSize="30"
					  click="setDate(lbYear, -1, 9999)"/>
			
	</s:TitleWindow>
	<fx:Metadata> 
		[Event(name="no", type="flash.events.Event")] 
		[Event(name="ok", type="flash.events.Event")]
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			import mx.managers.PopUpManager;
			
			[Bindable]
			public var content:String;
			
			protected function initPopUp(event:FlexEvent):void
			{
				PopUpManager.centerPopUp(this);
				var d:Date = new Date();
				
				lbDay.text = d.getDate()+"";
				lbMonth.text = (d.getMonth()+1)+"";
				lbYear.text = d.fullYear+"";
			}
			
			protected function setDate(l:Label, plus:int, max:uint):void
			{
				var i:int = int(l.text) + plus;
				l.text = Math.max( Math.min( max, i ), 1 )+"";
			}
			
		]]>
	</fx:Script>
</s:SkinnablePopUpContainer>
